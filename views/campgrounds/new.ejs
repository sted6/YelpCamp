
<!--include the header file -->
<% include ../partials/header %>

<div class="container">
   <div class="row">
      <h1 style="text-align: center">Add a new campgorund </h1>
      <div style="width: 30%; margin : 25px auto">
         <form action="/campgrounds" method="POST">
            <div class="form-group">
               <input class = "form-control" type="text" name = "name" placeholder="camp name" required>
            </div>
            <div class="form-group">
               <input class="form-control" type="url" name = "image" placeholder="image url" required>
            </div>
			<div class="form-group">
  			<input class="form-control" type="number" name="cost" placeholder="cost" step="0.01" min="0" required>
			</div>
            <div class="form-group">
               <input class = "form-control" type="text" name = "description" placeholder="description" required>
            </div>
            <div class="form-group">
               <button class="btn btn-primary btn-large btn-block">Submit</button>
            </div>
         </form>
         <a href="/campgrounds">Back</a>
      </div>
   </div>
</div>


