<% include ../partials/header %>

<div class="container">
   <div class="row">
      <h1 style="text-align: center">Add new Comment into <%= campground.name %></h1>
      <div style="width: 30%; margin : 25px auto">
         <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
            <div class="form-group">
               <input class = "form-control" type="text" name = 'comment[content]' placeholder="comment" required>
            </div>
            <div class="form-group">
               <button class="btn btn-primary btn-large btn-block">Submit</button>
            </div>
         </form>
         <a href="/campgrounds">Back</a>
      </div>
   </div>
</div>


